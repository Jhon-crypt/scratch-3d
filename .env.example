# Redis
REDIS_URL=redis://redis:6379/0

# Orchestrator â†’ internal services
IMAGE_SERVICE_URL=http://image-service:8000
RECONSTRUCT_SERVICE_URL=http://reconstruction-service:8000
POSTPROCESS_SERVICE_URL=http://postprocess-service:8000

# Shared storage (must match volume mounts)
OUTPUTS_DIR=/outputs
INPUTS_DIR=/inputs
CACHE_DIR=/cache
MODELS_DIR=/models

# Post-processing on/off
ENABLE_POSTPROCESS=true

# Image service: real FLUX is in flux-service (same repo). Use it when flux-service is running.
FLUX_BACKEND_URL=http://flux-service:8000
USE_IMAGE_STUB=false

# Hugging Face token (required for gated FLUX.1-schnell). Set in .env; never commit .env.
# HF_TOKEN=your_hf_token_here

# FLUX service (flux-service/): model choice
# FLUX_MODEL=black-forest-labs/FLUX.1-schnell
# FLUX_MODEL=black-forest-labs/FLUX.1-dev

# GPU per container (for multi-GPU runs)
# CUDA_VISIBLE_DEVICES=0
# CUDA_VISIBLE_DEVICES=4
